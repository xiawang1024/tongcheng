@import './fontSize.styl'
@import "../node_modules/stylus-px2rem"
body
	background #f5f5f5;
	width 720px;
	padding-bottom 100px
	.g-hd
		position: relative
		width 720px
		height 360px
		background url('../imgs/1.jpg') center center no-repeat
		background-size cover
		.m-back
			position: absolute
			left 30px
			top 30px
			display inline-block
			width 21px
			height 40px
			background url('../imgs/left.png') center center no-repeat
			background-size cover
		.m-t1
			position: absolute
			top 270px
			left 47.5px
			width 625px
			font-size 34px
			color #fff
	.g-person
		position: relative
		width 720px
		height 108px
		background #fff
		vertical-align middle
		.m-avatar
			position: absolute
			top 20px
			left 30px
			width 66px
			height 66px
			border-radius 50%
			overflow hidden
			font-size 0
			img
				width 66px
				height 66px
		.m-text
			position: absolute
			left 118px
			top 20px
			.u-name
				font-size 28px
				color #333
			.u-sign
				display block
				color #999
				margin-top 8px
				font-size 20px
		.m-love
			position: absolute
			top 29px
			right 24px
			.u-btn
				display inline-block
				width 135px
				height 50px
				border 1px solid #ff3d6e
				background none
				border-radius 25px
				font-size 24px
				color #ff3d6e
	.g-content
		margin-top 20px
		background #fff
		padding 45px 36px  
		text-align center
		p
			text-align left
			font-size 28px
			color #333
			line-height 1.7
		.m-img1,.m-img2
			margin 45px 0 
			img
				width 648px
				height 415px
				display block
		.m-searchall
			margin-top 60px
			width 648px
			height 86px
			line-height 86px
			border 1px solid #e5e5e5
			border-radius 12px
			text-align left
			vertical-align middle
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
			.u-txt
				font-size 29px
				color #666
				padding-left 35px
			.u-btn
				display inline-block
				width 168px
				height 50px
				border none
				border-radius 25px
				background -webkit-linear-gradient(#ff7c7c, #f04948)
				font-size 26px 
				color #fff
				margin-left 200px
	.g-share
		margin-top 20px			
		background #fff
		padding-bottom 50px
		.share-title
			font-size 26px
			color #333
			padding-top 30px
			margin-left 30px
		.share-box
			margin-top 48px
			display flex
			.m-item
				flex 1
				text-align center
				font-size 0
				img					
					width 91px
					height 91px
				.u-txt
					font-size 22px
					color #666
					display block
					margin-top 20px
	.g-comment
		margin-top 20px
		background #fff
		.m-title
			width 720px
			height 84px
			line-height 84px
			font-size 26px
			color #333
			padding-left 30px
			border-bottom 1px solid #e5e5e5
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;
			box-sizing: border-box;
		.m-list
			width 720px
			.u-item
				width 720px
				padding 30px 30px
				border-bottom 1px solid #e5e5e5
				-webkit-box-sizing: border-box;
				-moz-box-sizing: border-box;
				box-sizing: border-box
				.item-avatar
					vertical-align top
					display inline-block
					img
						display block
						width 62px
						height 62px
				.item-text
					vertical-align top
					display inline-block
					width 540px
					margin-left 20px
					.u-name
						display block
						font-size 26px
						color #3e6184
					.u-txt
						display block
						margin-top 10px
						font-size 26px
						color #333
					.u-time
						display block
						margin-top 10px
						font-size 20px
						color #999
					.u-chat
						margin-top 20px
						padding 12px
						background #eee
						border-radius 10px
						.chat-user
							font-size 26px
							color #3e6184
						.chat-txt
							font-size 26px
							color #333
						.chat-time
							display block
							margin-top 10px
							font-size 20px
							color #999
		.m-fb
			background #eee
			text-align center
			height 586px
			img
				margin-top 130px
			.fb-txt
				margin-top 20px
				font-size 24px
				color #999
			.fb-btn
				margin-top 50px
				display inline-block
				width 212px
				height 70px
				line-height 70px
				border 1px solid #ff3d6e
				background none
				font-size 29px
				color #ff3d6e
				border-radius 35px
	
						
							
					
			
	
	
				
			
		
			
