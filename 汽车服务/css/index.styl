@import './fontSize.styl'
@import "../node_modules/stylus-px2rem"
html
	background #eee
body 
	width 720px
	margin 0 auto 
	.g-head
		position: relative;
		width 720px 
		height 355px
		line-height 355px
		text-align center
		.m-hd
			position: absolute
			z-index: 10
			width 720px
			height 55px
			line-height 55px
			margin-top 8px
			.u-back
				position: absolute
				left 28px
				top 6px
				width 21px
				height 40px
				background url('../imgs/left.png') no-repeat                	
				background-size cover
			.u-search
				position: absolute;
				width 524px
				height 55px
				background rgba(255, 255, 255, .75)
				border-radius 27px
				left 100px
				top 0
				.search-icon
					vertical-align top
					display inline-block
					width 29px
					height 29px
					margin-top 13px
					background url('../imgs/search.png') no-repeat
					background-size cover
				.search-ipt
					border none 
					outline none
					background none
					font-size 25px
		.m-banner
			position: absolute;
			width 720px
			height 355px
			overflow hidden
			.banner-img
				width 720px
				height 355px
	.g-main
		width 720px
		height 186px
		overflow hidden
		background #fff
		.m-items
			display flex
			font-size 0
			margin-top 30px
			.item-a
				display block
				flex 1
				text-align center
				.item-img
					// display block
					width 90px
					height 90px
				.item-text
					display block
					margin-top 16px
					font-size 22px
					color #333
	.g-content
		margin-top 20px
		width 720px	
		.m-cont
			width 720px
			height 738px
			padding-top 10px
			background #fff
			overflow hidden
			margin-bottom 20px
			.u-title
				width 720px
				height 30px
				margin-top 24px
				margin-bottom 25px
				line-height 30px
				text-align center
				.u-left, .u-right
					position: relative
					top -10px
					display inline-block
					width 56px
					height 2px 
					background #000
					line-height 30px
				.u-name
					font-size 32px
					color #333
					margin 0 6px
			.u-main
				width 720px
				.cont-show
					width 720px
					height 400px
					font-size 0
					.u-lt, .u-gt
						display inline-block
						vertical-align top
					.u-lt
						width 270px
						height 400px
						margin-left 20px
						font-size 0
						.lt-img
							width 270px
							height 400px
							border-radius 10px
					.u-gt
						margin-left 14px
						width 396px
						height 400px
						font-size 0
						.gtup-img, .gtdown-img
							border-radius 10px
							width 396px
							height 195px
						.gtup-img
							margin-bottom 10px
				.cont-more
					position: relative
					width 680px
					height 192px
					margin-left 20px
					margin-top 16px
					text-align center
					.more-img
						display block
						width 680px
						height 192px
					.more-link
						position: absolute
						display inline-block
						top 60px
						left 237px
						width 207px
						height 73px
						line-height 67px
						border 3px solid #fff
						border-radius 10px
						font-size 31px
						color #fff
						-webkit-box-sizing: border-box;
						-moz-box-sizing: border-box;
						box-sizing: border-box;
	.g-foot
		width 720px
		overflow hidden
		background #fff
		.u-title
			width 720px
			height 30px
			margin-top 24px
			margin-bottom 25px
			line-height 30px
			text-align center
			margin-top 30px
			margin-bottom 30px
			.u-left, .u-right
				position: relative
				top -10px
				display inline-block
				width 56px
				height 2px 
				background #000
				line-height 30px
			.u-name
				font-size 32px
				color #333
				margin 0 6px
		.m-sellers
			display flex
			.seller-item
				flex 1
				text-align center
				font-size 0
				margin-bottom 32px
				.seller-img
					// display block
					width 116px
					height 116px
				.seller-title
					display inline-block
					font-size 23px
					color #333
					width 174px
					white-space nowrap
					text-overflow ellipsis
					overflow hidden
					margin-top 6px 
				.seller-type
					display inline-block
					width 114px
					height 30px
					line-height 30px
					font-size 18px
					border 2px solid #000
					border-radius 12px
					margin-top 12px
					padding-top 2px 
					padding-bottom 3px
					&.blue
						color #00a1ff
						border-color #00a1ff
					&.red
						color #df3e3e
						border-color #df3e3e
						
					    
				     
					
		    
		    	
		    				
		
		
			
		                     	
	 