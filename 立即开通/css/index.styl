@import './fontSize.styl'
@import "../node_modules/stylus-px2rem"
body
	width 720px
	height 100%
	// background #f5f5f5
	.g-hd
		position: relative
		width 720px
		height 394px
		overflow hidden
		background url('../imgs/openwallet.png') no-repeat
		background-size cover	
		.u-back
			position: absolute
			top 17px
			left 30px
			display inline-block
			width 18px
			height 30px
			background url('../imgs/back.png') no-repeat
			background-size cover
	.g-main
		width 720px
		margin-top 115px
		display flex
		.m-item
			flex 1
			text-align center
			// margin 0 50px\
			font-size 0	
			.item-text
				display block
				font-size 22px
				font-weight 500
				margin-top 20px
			&:nth-child(1)
				.item-img
					display inline-block
					width 111px
					height 111px
					background url('../imgs/icon1.png') no-repeat
					background-size cover				    
			&:nth-child(2)
				.item-img
					margin-top 60px
					display inline-block
					width 123px
					height 123px
					background url('../imgs/icon2.png') no-repeat
					background-size cover
				.item-text
					font-size 26px
					font-weight 500				    
			&:nth-child(3)
				.item-img
					display inline-block
					width 111px
					height 111px
					background url('../imgs/icon3.png') no-repeat
					background-size cover
	.g-ft
		width 720px
		text-align center
		position: absolute
		bottom 80px
		.open-btn
			display inline-block
			width 595px
			height 80px
			line-height 80px
			text-align center
			font-size 30px
			font-weight 500
			color #fff
			background #08a7fc
			border-radius 40px
			box-shadow 0 4px 30px 2px #89cef4
		.u-agree
			margin-top 56px
			width 720px
			display block
			.agree-ipt
				visibility hidden
			.check-icon
				// vertical-align top
				margin-top 2px
				display inline-block
				width 21px
				height 21px
				background url('../imgs/checked.png') no-repeat
				background-size cover
			.u-agree-text
				vertical-align top
				.agree-link
					color #46b4f9
				
				
				
					    